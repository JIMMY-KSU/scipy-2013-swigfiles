
#include <vector>
#include <string>

class Person{
    private:
        std::string name;
        int age;
        char sex;
        std::vector<std::string> hobbies;        
    public:
        Person();
        void setName(std::string name);
        std::string getName();
        void setAge(int age);
        int getAge();
        void setSex(char sex);
        char getSex();
        void addHobby(std::string hobby);
        std::vector<std::string> getHobbies();
    
};
